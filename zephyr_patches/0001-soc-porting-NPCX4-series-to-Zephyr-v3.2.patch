+	inst->UMA_CODE = data;
+	npcx_uma_start(dev, UMA_CODE_CMD_WR_ONLY);
+	/* EXEC_DONE will be zero automatically if a UMA transaction is completed. */
+	while (IS_BIT_SET(inst->UMA_CTS, NPCX_UMA_CTS_EXEC_DONE)) {
+		continue;
+	}
